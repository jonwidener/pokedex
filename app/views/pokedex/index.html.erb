<div class="rounded-lg bg-red-600 shadow-lg p-4">
  <div class="m-1 bg-white rounded-lg border-2 w-[44rem] h-[45rem] overflow-hidden">
    <div class="mb-4 grid grid-cols-2 h-10">
      <%= form_tag 'pokedex/search', :method => 'post', data: { action: 'submit->auto-submit#cancel' } do %>
        <%= text_field_tag 'pokesearch', '', class: 'rounded-lg m-1', data: { auto_submit_target: 'input', action: 'input->auto-submit#trigger' } %>
      <% end %>
      <div class="text-2xl text-center pt-4">
        Pok√©dex
      </div>
    </div>
    <div class="h-[37.5rem] rounded-lg bg-white m-1 p-2">
      <% (@first_id..@last_id).each do |id| %>
        <div class="text-2xl">
          <%= link_to 'pokemon/' + id.to_s do %><%= id.to_s.rjust(3, '0') %>.<%= @pokelist[id].upcase %><% end %>
        </div>
      <% end %>
    </div>
    <div class="p-4 grid grid-cols-2 justify-between">
      <div class="text-left">
        <a href="/?first_id=<%= [1, @first_id - 18].max %>" class="<%= 'hidden' if @first_id == 1 %>">Prev</a>
      </div>
      <div class="text-right">
        <a href="/?first_id=<%= [150, @first_id + 18].min %>" class="<%= 'hidden' if @last_id == 150 %>">Next</a>
      </div>
    </div>
  </div>
</div>
